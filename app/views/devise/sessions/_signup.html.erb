<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-12 field">
      <div class="input-group input-group-lg">
        <%= f.text_field :username, autofocus: true, placeholder: "username", class: "form-control input" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 field">
      <div class="input-group input-group-lg">
        <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control input" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 field">
      <div class="input-group input-group-lg">
        <%= f.password_field :password, placeholder: "password", class: "form-control input" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center field solid">
      <%= f.submit "SIGN UP", class: "btn btn-primary input" %>
    </div>
  </div>
<% end %>
