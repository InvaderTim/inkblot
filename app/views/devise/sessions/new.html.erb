<div id="home-form">
  <div class="row vertical-center">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center" id="form-logo">
        <embed src="<%= asset_path("inkblotlogo.svg") %>" width="216" height="250"/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="content">
          <ul class="nav nav-tabs nav-justified">
            <li class="active" class="text-right">
              <a href="#login" data-toggle="tab">LOGIN</a>
            </li>
            <li>
              <a href="#signup" data-toggle="tab">SIGNUP</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="login">
              <%= render "login" %>
            </div>
            <div class="tab-pane" id="signup">
              <%= render "signup" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
