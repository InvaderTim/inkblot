<!DOCTYPE html>
<html>
<head>
  <title>Inkblot</title>
  <%= favicon_link_tag       "inkdrop.png", type: "image/png" %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if user_signed_in? %>
    <div class="row" id="global-header-row">
      <p class="text-center">
        <embed src="<%= asset_path("inkblotlogoheader.svg") %>" width="100" height="120"/>
      </p>
    </div>
    <div class="row" id="global-content-row">
      <div id="global-navigation" class="col-md-3">
        <%= render "shared/navigation" if user_signed_in? %>
      </div>

      <div id="global-content" class="col-md-8 col-md-offset-1">
    <% end %>
        <%= bootstrap_flash %>

        <%= yield %>
    <% if user_signed_in? %>
      </div>
    </div>
    <% end %>
  </div>
</div>

</body>
</html>
